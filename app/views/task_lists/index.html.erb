<p id="notice"><%= notice %></p>

<h1>Lista de tareas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Inicio</th>
      <th>Fin</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_lists.each do |task_list| %>
      <tr>
        <td><%= task_list.title %></td>
        <td><%= task_list.start_date.strftime("%H:%m del dia %d-%m-%Y") %></td>
        <td><%= task_list.end_date.strftime("%H:%m del dia %d-%m-%Y") %></td>
        <td><%= task_list.email %></td>
        <td><%= link_to 'Ver', task_list %></td>
        <td><%= link_to 'Editar', edit_task_list_path(task_list) %></td>
        <td><%= link_to 'Eliminar', task_list, method: :delete, data: { confirm: 'Â¿Eliminar la lista de tareas?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

