<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @task_list.title %>
</p>

<p>
  <strong>Hora de inicio:</strong>
  <%= @task_list.start_date.strftime("%H:%m del dia %d-%m-%Y") %>
</p>

<p>
  <strong>Hora de fin:</strong>
  <%= @task_list.end_date.strftime("%H:%m del dia %d-%m-%Y") %>
</p>

<% if @task_email %>
	<p>
	  <strong>Email:</strong>
	  <%= @task_list.email %>
	</p>
<% end %>

<%= link_to 'Editar', edit_task_list_path(@task_list) %> |
<%= link_to 'Atras', task_lists_path %>
